<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.datakernel</groupId>
    <artifactId>datakernel-examples</artifactId>
    <version>3.0.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>http-examples</artifactId>

  <name>Datakernel Examples: HTTP</name>

  <dependencies>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-http</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-boot</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>http-launchers</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>global-fs</artifactId>
      <version>${project.version}</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>HttpBenchmark</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>io.datakernel.examples.HttpBenchmark</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpClientExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>io.datakernel.examples.HttpClientExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpMultithreadedServerExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>io.datakernel.examples.HttpMultithreadedServerExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpServerExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>io.datakernel.examples.HttpServerExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>MiddlewareServletExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>io.datakernel.examples.RoutingServletExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>RequestParameterExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>io.datakernel.examples.RequestParameterExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>StaticServletExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>io.datakernel.examples.StaticServletExample</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
