<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.datakernel</groupId>
    <artifactId>core</artifactId>
    <version>3.0.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>http</artifactId>
  <name>Examples : Core : Http</name>

  <dependencies>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-http</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-boot</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>http-launchers</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.github.spullara.mustache.java</groupId>
      <artifactId>compiler</artifactId>
      <version>0.9.4</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>HttpParamParserExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>decoder.HttpParamParserExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>BlockingServletExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>BlockingServletExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>ClientExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>ClientExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>FileUploadExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>FileUploadExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HelloWorldExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HelloWorldExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpRequestParametersExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpRequestParametersExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>MultithreadedServerExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>MultithreadedServerExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>RoutingServletExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>RoutingServletExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>ServerScratch</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>ServerScratch</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>ServletDecoratorExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>ServletDecoratorExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>StaticServletExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>StaticServletExample</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
