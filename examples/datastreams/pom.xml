<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.datakernel</groupId>
    <artifactId>datakernel-examples</artifactId>
    <version>3.0.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>datastreams-examples</artifactId>

  <name>Datakernel Examples: DataStreams</name>

  <dependencies>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-datastream</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>BuiltinStreamNodesExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>io.datakernel.examples.BuiltinStreamNodesExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>ConsumerExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>io.datakernel.examples.ConsumerExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>NetworkDemoClient</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>io.datakernel.examples.NetworkDemoClient</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>NetworkDemoServer</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>io.datakernel.examples.NetworkDemoServer</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>SupplierExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>io.datakernel.examples.SupplierExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>TransformerExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>io.datakernel.examples.TransformerExample</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
