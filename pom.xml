<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.datakernel</groupId>
    <artifactId>datakernel</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>

    <modules>
        <module>async-streams</module>
        <module>codegen</module>
        <module>datagraph</module>
        <module>eventloop</module>
        <module>guice</module>
        <module>http</module>
        <module>cube</module>
        <module>rpc</module>
        <module>serializer</module>
        <module>hashfs</module>
        <module>simplefs</module>
    </modules>

    <name>DataKernel Framework</name>
    <description>
        DataKernel Java framework allows to build scalable, extremely fast and resilient network applications.
        It uses unified 'Event Loop' architecture and allows to build everything from asynchronous I/O operations on standalone servers to efficient Big Data cluster solutions.
    </description>
    <url>http://datakernel.io/</url>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <url>https://github.com/softindex/datakernel</url>
        <connection>scm:git:git@github.com:softindex/datakernel.git</connection>
    </scm>

    <developers>
        <developer>
            <id>dvolvach</id>
            <name>Dmitry Volvach</name>
            <email>dmitry@datakernel.io</email>
            <timezone>UTC+2</timezone>
            <roles>
                <role>owner</role>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>1.1.3</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
